<h1><%= t('.sign_up') %></h1>
<br/>

<%= form_for(resource, as: resource_name, :html => {:class => "col-md-10 offset-md-1"},
        url: registration_path(resource_name)) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: 'email',
     class: "form-control fadeIn second", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: 'current-password',
        class: 'form-control fadeIn fourth', placeholder: "Senha" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: 'current-password',
        class: 'form-control fadeIn fourth', placeholder: "Confirmação de Senha" %>
  </div>

  <div class="form-group">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
  </div>
<% end %>

<div id="formFooter">
  <%= render 'devise/shared/links' %>
</div>
