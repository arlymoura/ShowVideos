<h1 class="title">Meus Videos</h1>
<div class="table-responsive">
  <table class="table table-bordered table-dark">
    <thead>
      <tr>
        <th class="text_left_al">Titulo</th>
        <th class="text_left_al">Url</th>
        <th class="text_left_al">Vizualizações</th>
        <th colspan="3" class="text_center_al"> Ações </th>
      </tr>
    </thead>

    <tbody>
      <% @videos.each do |video| %>
        <tr>
          <td><%= video.titulo %></td>
          <td><%= video.url %></td>
          <td><%= video.views %></td>
          <td><%= link_to 'Ver', video %></td>
          <td><%= link_to 'Editar', edit_video_path(video) %></td>
          <td><%= link_to 'Apagar', video, method: :delete, data: { confirm: 'Deseja remover?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="row col-md-3 offset-md-5">
  <%= will_paginate @videos, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>

<%= link_to 'Novo Video', new_video_path, class: "btn btn-success float-right" %>
