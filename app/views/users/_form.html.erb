<%= form_for @user, html: {role: "form", class: "col-md-6 offset-md-3"} do |form| %>
  <% if @user.errors.any? %>
      <%= errors_for @user %></li>  
  <% end %>

  <div class="form-group">
    <%= form.label :email, required: true %>
    <%= form.text_field :email, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.text_field :password, class: "form-control" %>
  </div>

  <div class="form-group pmd-textfield">
    <%= form.label :role %>
    <%= form.select :role, UserRole.to_a, {}, { class: 'form-control' } %>
  </div>

  <div class="form-buttons float-right">
    <%= link_to 'Voltar', users_path, class: "btn btn-danger" %>
    <%= form.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
